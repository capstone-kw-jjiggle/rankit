{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],

  "semi": true,
  "tabWidth": 2,
  "printWidth": 80,
  "trailingComma": "all",
  "bracketSameLine": true,
  "singleQuote": true,
  "endOfLine": "auto",
  "importOrder": [
    "^react(.*)",
    "^@tanstack/(.*)$",
    "^axios(.*)",
    "^@/shared/components/(.*)$",
    "^@/shared/hooks/(.*)$",
    "^@/shared/apis/(.*)$",
    "^@/shared/utils/(.*)$",
    "^@/shared/types/(.*)$",
    "^@/shared/constants/(.*)$",
    "^@/shared/assets/(.*)$",
    "^@/(.*)$",
    "^[./]"
  ]
}
